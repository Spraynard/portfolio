extends layout

block masthead
	| Contact

block content
	.form-wrapper
		form(action="/contact" method="post")#contact-form
			#first-name
				label(for="first-name")
					|	First Name <br>
				input(type="text" name="first-name").name-input
			#last-name
				label(for="last-name")
					|	Last Name <br>
				input(type="text" name="last-name").name-input
			#subject
				label(for="subject")
					|	Subject <br>
				input(type="text" name="subject")
			#body
				label(for="body")
					|	Body <br>
				textarea(name="body")
			#contact-submit
				input(type="submit" value="Send that beautiful e-mail!")
